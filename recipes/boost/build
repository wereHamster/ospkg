
VERSION="1.42.0"
SOURCE="boost_1_42_0.tar.bz2"

unpack () {
    tar -xjf "$1" && cd boost_1_42_0
}

build () {
  bash ./bootstrap.sh
  ./bjam toolset=sun address-model=32 --prefix=$DESTDIR/usr --libdir=$DESTDIR/usr/lib --without-mpi install
  ./bjam toolset=sun address-model=64 --prefix=$DESTDIR/usr --libdir=$DESTDIR/usr/lib/amd64 --without-mpi install
}
