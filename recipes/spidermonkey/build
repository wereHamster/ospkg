VERSION="1.8.0"
SOURCE="js-1.8.0-rc1.tar.gz"

build () {
  tar -xzf "$1" && cd js/src/ && rm lock*

  make -f Makefile.ref OS_CONFIG=SunOS5.10 BUILD_OPT=1 \
    XCFLAGS="-DJS_C_STRINGS_ARE_UTF8" JS_DIST="$DESTDIR/usr"

  make -f Makefile.ref OS_CONFIG=SunOS5.10 BUILD_OPT=1 \
    XCFLAGS="-DJS_C_STRINGS_ARE_UTF8" JS_DIST="$DESTDIR/usr" export
}
